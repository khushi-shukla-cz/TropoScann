# TropoScan Frontend Configuration

# SerpAPI Configuration (Vite uses VITE_ prefix)
# Get your free API key from https://serpapi.com
# VITE_SERP_API_KEY=your_serp_api_key_here

# Google Maps Configuration
# Enable Google Maps JavaScript API and Places API
# VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Backend API Configuration
VITE_API_BASE_URL=http://localhost:5000

# Debug Mode
# VITE_DEBUG=true

# Development Settings
VITE_ENVIRONMENT=development

# Map Settings
REACT_APP_DEFAULT_MAP_CENTER_LAT=20.5937
REACT_APP_DEFAULT_MAP_CENTER_LNG=78.9629
REACT_APP_DEFAULT_MAP_ZOOM=6

# Trend Analysis Settings
REACT_APP_DEFAULT_TREND_RANGE=30d
REACT_APP_MAX_TREND_DAYS=90

# UI Settings
REACT_APP_ENABLE_ANIMATIONS=true
REACT_APP_THEME=dark
